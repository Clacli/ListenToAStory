<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="@dimen/root_view_padding"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            style="@style/LandBookTitleStyle"
            android:gravity="center|bottom"
            android:text="@string/title_of_book" />

        <TextView
            style="@style/LandBookTitleStyle"
            android:gravity="center"
            android:text="@string/fable_numeration" />

        <TextView
            style="@style/LandBookTitleStyle"
            android:gravity="center|top"
            android:text="@string/editor" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/library_list_item">

            <TextView
                android:id="@+id/library"
                style="@style/ActionTextViewStyle"
                android:background="?attr/selectableItemBackground"
                android:text="@string/library"
                android:textColor="@android:color/white" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/info_on_resource_provider">

            <TextView
                android:id="@+id/audio_file_provider_info"
                style="@style/ActionTextViewStyle"
                android:background="?attr/selectableItemBackground"
                android:text="@string/more_on_librivox"
                android:textColor="@android:color/black" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/web_search">

            <TextView
                android:id="@+id/author_search"
                style="@style/ActionTextViewStyle"
                android:background="?attr/selectableItemBackground"
                android:text="@string/search_aesop_on_the_web"
                android:textColor="@android:color/black" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/info_on_author">

            <TextView
                android:id="@+id/author_info"
                style="@style/ActionTextViewStyle"
                android:background="?attr/selectableItemBackground"
                android:text="@string/more_on_aesop"
                android:textColor="@android:color/black" />

        </FrameLayout>

    </LinearLayout>

</LinearLayout>