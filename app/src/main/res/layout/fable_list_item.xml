<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fable_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/fable_list_item_vertical_root_view_padding"
    android:paddingLeft="@dimen/fable_list_item_horizontal_root_view_padding"
    android:paddingRight="@dimen/fable_list_item_horizontal_root_view_padding"
    android:paddingTop="@dimen/fable_list_item_vertical_root_view_padding">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fable_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/library_title_of_fable_text_size"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/library_title_container_vertical_spacing"
            android:text="@string/read_by"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/reader_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/library_title_container_vertical_spacing"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/book_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <TextView
        android:id="@+id/duration"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:drawableTop="@mipmap/ic_round_play_arrow_white_24"
        android:gravity="bottom"
        android:textColor="@android:color/white" />

</LinearLayout>