<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/root_view_padding"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:background="#00838F"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@android:color/white"
        android:text="@string/title_of_book" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:background="#00838F"
        android:text="@string/fable_numeration"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center|top"
        android:background="#00838F"
        android:text="@string/editor"
        android:textColor="@android:color/white" />


    <TextView
        android:id="@+id/library"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:gravity="center"
        android:background="#0097A7"
        android:text="@string/library"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/audio_file_provider_info"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:gravity="center"
        android:background="#00ACC1"
        android:text="@string/more_on_librivox"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/author_search"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:gravity="center"
        android:background="#00BCD4"
        android:text="@string/search_aesop_on_the_web"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/author_info"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:gravity="center"
        android:background="#26C6DA"
        android:text="@string/more_on_aesop"
        android:textColor="@android:color/black" />

</LinearLayout>